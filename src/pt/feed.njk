---
permalink: /pt/feed.xml
eleventyExcludeFromCollections: true
layout: null
metadata:
  title: "sumtozero.net, a blog my Miguel P. Marques"
  subtitle: "Reflexões sobre masterização, design de estúdios e educação."
  language: "pt"
  url: "https://sumtozero.net/pt/"
  author:
    name: "Miguel P. Marques"
    email: "miguel@knurlmastering.com"
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ metadata.title }}</title>
    <description>{{ metadata.subtitle }}</description>
    <link>{{ metadata.url }}</link>
    <atom:link href="{{ site.url }}{{ permalink }}" rel="self" type="application/rss+xml" />
    <language>{{ metadata.language }}</language>
    
    {# Loop through Portuguese posts, newest first #}
    {%- for post in collections.posts_pt | reverse %}
    {% set absolutePostUrl %}{{ site.url }}{{ post.url }}{% endset %}
    <item>
      <title>{{ post.data.title | escape }}</title> 
      <link>{{ absolutePostUrl }}</link>
      <description>{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | escape }}</description>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
      <guid>{{ absolutePostUrl }}</guid>
    </item>
    {%- endfor %}
  </channel>
</rss>
